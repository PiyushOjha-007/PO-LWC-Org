<aura:component controller="AccController" >
	 
   <aura:handler name="init" value="{!this}" action="{!c.getAcc}" /> 
    <aura:attribute name="accounts" type="List" access="global" />
    <aura:attribute name="accountObj" type="String" description="use for store user search input"></aura:attribute>
    <h1 align="center"><b><u>Salesforce Lightning First Application</u></b></h1><br/><br/>
   <!-- <ui:inputText label="Account Name"  aura:id="AccName" value="{!v.accountObj}"  placeholder="Account Name" /><br/>
    <ui:button label="Show Accounts" press="{!c.getAcc}"/> -->
    
        <table class="slds-table slds-table--bordered slds-table--striped slds-table--cell-buffer slds-table--fixed-layout">    
            <thead>
				<tr class="slds-text-heading--label">
	             <th scope="col"><div class="slds-truncate" >Account Name</div></th>
            	 
             	<th scope="col"><div class="slds-truncate" >Email</div></th>
             	<th scope="col"><div class="slds-truncate" >Head Office Country</div></th>
             	<th scope="col"><div class="slds-truncate" >Website</div></th>
             	<th scope="col"><div class="slds-truncate" >Phone</div></th>
           	  </tr>
          </thead>
        <tbody>
        <!--   <c:GenericPaginationComponent allData="{!v.accounts}"/> -->
     <aura:iteration var="accVar" items="{!v.accounts}">
         <tr>
         		<td>{!accVar.Name}</td>
         		
            	<td>{!accVar.Email__c}</td>
                <td>{!accVar.HeadOfficeCountry__c}</td>
                 <td>{!accVar.Website}</td>
             	<td>{!accVar.Phone}</td>
         </tr>
            
    </aura:iteration> 
            </tbody>
      </table>
    
</aura:component>