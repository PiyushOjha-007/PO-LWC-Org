<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" controller="MyRetailer_Controller" access="global" >
    
    <aura:attribute name="legitimationRecordTypeId" type="String" access="private"/>
    <aura:attribute name="IsMaintenanceOn" type="Boolean" default="false"/>
    <aura:attribute name="MaintenaceDetail" type="Mainten__mdt" access="global"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <h1>Maintenance Down Time Here</h1>
    <aura:if isTrue="{!v.IsMaintenanceOn}" >
        <c:ShowDowntime mainDetail="{!v.MaintenaceDetail}"/>
        <aura:set attribute="else">
            <h1>Original Component No Downtime yet !!!!!!!</h1>
        </aura:set>
    </aura:if>
    
</aura:component>